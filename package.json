{
  "name": "twoblocks",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "echo TODO",
    "testonly": "craco test",
    "analyze": "ANALYZE=true yarn build",
    "prettier": "prettier --write '**/*.{js,ts,tsx}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "bundle-analyzer": {
    "files": [
      {
        "test": "static/js/*.js",
        "maxSize": "650 KB"
      }
    ]
  },
  "dependencies": {
    "@blockstack/stacks-transactions": "0.6.0",
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.56",
    "@material-ui/styles": "4.10.0",
    "@otplib/preset-browser": "12.0.1",
    "@sentry/browser": "5.20.1",
    "blockstack": "21.1.0",
    "fathom-client": "3.0.0",
    "query-string": "6.13.1",
    "react": "16.13.1",
    "react-blockstack-button": "0.1.0",
    "react-dom": "16.13.1",
    "react-is": "16.13.1",
    "react-qr-reader": "2.2.1",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@blockstack/connect": "2.10.5",
    "@bundle-analyzer/webpack-plugin": "0.5.1",
    "@craco/craco": "5.6.4",
    "@types/jest": "25.2.3",
    "@types/node": "14.0.27",
    "@types/query-string": "6.3.0",
    "@types/react": "16.9.44",
    "@types/react-dom": "16.9.8",
    "@types/react-qr-reader": "2.1.3",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "react-scripts": "3.4.1",
    "typescript": "3.9.7",
    "webpack-bundle-analyzer": "3.8.0"
  }
}

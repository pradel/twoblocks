{
  "name": "twoblocks",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "echo TODO",
    "testonly": "craco test",
    "analyze": "ANALYZE=true yarn build",
    "prettier": "prettier --write '**/*.{js,ts,tsx}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bundle-analyzer": {
    "files": [
      {
        "test": "static/js/*.js",
        "maxSize": "650 KB"
      }
    ]
  },
  "dependencies": {
    "@blockstack/stacks-transactions": "0.7.0",
    "@material-ui/core": "4.11.2",
    "@material-ui/icons": "4.11.2",
    "@material-ui/lab": "4.0.0-alpha.57",
    "@material-ui/styles": "4.11.2",
    "@otplib/preset-browser": "12.0.1",
    "@sentry/browser": "5.28.0",
    "@sentry/react": "5.28.0",
    "blockstack": "21.1.1",
    "fathom-client": "3.2.0",
    "query-string": "6.14.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "react-qr-reader": "2.2.1",
    "typeface-roboto": "1.1.13"
  },
  "devDependencies": {
    "@blockstack/connect": "2.12.7",
    "@craco/craco": "6.3.0",
    "@types/jest": "26.0.24",
    "@types/node": "14.17.17",
    "@types/query-string": "6.3.0",
    "@types/react": "17.0.21",
    "@types/react-dom": "17.0.9",
    "@types/react-qr-reader": "2.1.4",
    "husky": "4.3.1",
    "lint-staged": "10.5.2",
    "prettier": "2.4.1",
    "react-scripts": "4.0.3",
    "typescript": "4.4.3",
    "webpack-bundle-analyzer": "4.4.2"
  }
}

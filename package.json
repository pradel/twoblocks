{
  "name": "twoblocks",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "analyze": "ANALYZE=true yarn build",
    "prettier": "prettier --write '**/*.{js,ts,tsx}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@material-ui/core": "3.9.2",
    "@material-ui/icons": "3.0.2",
    "@material-ui/lab": "3.0.0-alpha.30",
    "@material-ui/styles": "3.0.0-alpha.10",
    "blockstack": "18.3.0",
    "otplib": "10.0.1",
    "query-string": "6.2.0",
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "react-qr-reader": "2.1.2",
    "the-platform": "0.9.3",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "@craco/craco": "3.4.1",
    "@types/jest": "24.0.3",
    "@types/node": "11.9.3",
    "@types/query-string": "6.2.0",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/react-qr-reader": "2.1.2",
    "husky": "1.3.1",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4",
    "react-scripts": "2.1.5",
    "typescript": "3.3.3",
    "webpack-bundle-analyzer": "3.0.4"
  }
}

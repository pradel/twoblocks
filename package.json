{
  "name": "twoblocks",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "size-limit",
    "testonly": "craco test",
    "analyze": "ANALYZE=true yarn build",
    "prettier": "prettier --write '**/*.{js,ts,tsx}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "size-limit": [
    {
      "path": "build/static/js/*.js",
      "webpack": false,
      "limit": "560 KB"
    }
  ],
  "dependencies": {
    "@material-ui/core": "4.3.1",
    "@material-ui/icons": "4.2.1",
    "@material-ui/lab": "4.0.0-alpha.22",
    "@material-ui/styles": "4.3.0",
    "blockstack": "19.2.2",
    "otplib": "11.0.1",
    "query-string": "6.8.2",
    "react": "16.8.6",
    "react-blockstack-button": "0.1.0",
    "react-dom": "16.8.6",
    "react-qr-reader": "2.2.1",
    "the-platform": "0.9.3",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@craco/craco": "5.2.4",
    "@types/jest": "24.0.16",
    "@types/node": "12.6.9",
    "@types/query-string": "6.3.0",
    "@types/react": "16.8.24",
    "@types/react-dom": "16.8.5",
    "@types/react-qr-reader": "2.1.2",
    "husky": "3.0.2",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "react-scripts": "3.0.1",
    "size-limit": "1.3.8",
    "typescript": "3.5.3",
    "webpack-bundle-analyzer": "3.4.1"
  }
}

{
  "name": "twoblocks",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "echo TODO",
    "testonly": "craco test",
    "analyze": "ANALYZE=true yarn build",
    "prettier": "prettier --write '**/*.{js,ts,tsx}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "bundle-analyzer": {
    "files": [
      {
        "test": "static/js/*.js",
        "maxSize": "530 KB"
      }
    ]
  },
  "dependencies": {
    "@material-ui/core": "4.5.1",
    "@material-ui/icons": "4.5.1",
    "@material-ui/lab": "4.0.0-alpha.29",
    "@material-ui/styles": "4.5.0",
    "blockstack": "19.3.0",
    "otplib": "11.0.1",
    "query-string": "6.8.3",
    "react": "16.11.0",
    "react-blockstack-button": "0.1.0",
    "react-dom": "16.11.0",
    "react-qr-reader": "2.2.1",
    "the-platform": "0.9.3",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@bundle-analyzer/webpack-plugin": "0.5.1",
    "@craco/craco": "5.5.0",
    "@types/jest": "24.0.19",
    "@types/node": "12.11.7",
    "@types/query-string": "6.3.0",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.3",
    "@types/react-qr-reader": "2.1.2",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "react-scripts": "3.2.0",
    "typescript": "3.6.4",
    "webpack-bundle-analyzer": "3.6.0"
  }
}
